# =============================================================================
# AgentPay MNEE - Environment Configuration
# =============================================================================
# SECURITY WARNING: NEVER commit real private keys or sensitive data to git
# Use different wallets for different roles (deployment, agent, vault owner)
# =============================================================================

# -----------------------------------------------------------------------------
# BLOCKCHAIN NETWORK CONFIGURATION
# -----------------------------------------------------------------------------
# Ethereum RPC endpoints for different networks
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# -----------------------------------------------------------------------------
# MNEE TOKEN CONFIGURATION
# -----------------------------------------------------------------------------
# MNEE ERC-20 Token Contract Address (DO NOT CHANGE)
MNEE_TOKEN_ADDRESS=0x8ccedbAe4916b79da7F3F612EfB2EB93A2bFD6cF

# -----------------------------------------------------------------------------
# DEPLOYMENT CONFIGURATION (Vault Owner Role)
# -----------------------------------------------------------------------------
# Private key for contract deployment and vault ownership
# SECURITY: Use a dedicated deployment wallet, never your main wallet
# SECURITY: This wallet will own the deployed AgentPayVault contract
# SECURITY: NEVER commit real private keys to git - use secure key management
DEPLOYER_PRIVATE_KEY=
VAULT_OWNER_ADDRESS=

# -----------------------------------------------------------------------------
# AGENT CONFIGURATION (Agent Role)
# -----------------------------------------------------------------------------
# Private key for the AI payment agent
# SECURITY: Use a separate wallet from deployment wallet
# SECURITY: This wallet executes payments on behalf of the agent
# SECURITY: NEVER use the same private key for multiple roles
AGENT_PRIVATE_KEY=
AGENT_WALLET_ADDRESS=

# Deployed AgentPayVault contract address (set after deployment)
VAULT_CONTRACT_ADDRESS=

# RPC URL for agent operations (can be different from deployment)
RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Test recipient wallet for agent payments
RECIPIENT_WALLET_ADDRESS=

# -----------------------------------------------------------------------------
# AGENT POLICY CONFIGURATION
# -----------------------------------------------------------------------------
# Comma-separated list of valid payment purposes
AGENT_VALID_PURPOSES=service_payment,api_usage,data_purchase,subscription,infrastructure

# Payment amount limits (in MNEE tokens)
AGENT_MIN_AMOUNT=0.1
AGENT_MAX_AMOUNT=1000

# Request processing delay (milliseconds)
AGENT_REQUEST_DELAY_MS=2000

# Test payment scenarios (comma-separated)
AGENT_PAYMENT_AMOUNTS=5,15,25,50
AGENT_PAYMENT_PURPOSES=Automated API service_payment,Data processing subscription,Infrastructure usage fee,Emergency service payment

# -----------------------------------------------------------------------------
# FRONTEND CONFIGURATION
# -----------------------------------------------------------------------------
# WalletConnect project ID for wallet connections
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_walletconnect_project_id

# Alchemy API key for frontend RPC calls
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key

# Public RPC URL for frontend (can be different from backend)
NEXT_PUBLIC_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_PUBLIC_KEY

# Contract addresses (populated after deployment)
NEXT_PUBLIC_VAULT_CONTRACT_ADDRESS=
NEXT_PUBLIC_MNEE_TOKEN_ADDRESS=0x8ccedbAe4916b79da7F3F612EfB2EB93A2bFD6cF

# Agent wallet address for frontend display
NEXT_PUBLIC_AGENT_ADDRESS=

# -----------------------------------------------------------------------------
# DEVELOPMENT CONFIGURATION
# -----------------------------------------------------------------------------
# Set to 'development' for additional logging
NODE_ENV=development

# Enable debug logging for agent operations
DEBUG_AGENT=true

# Enable transaction simulation mode (no real transactions)
SIMULATION_MODE=false