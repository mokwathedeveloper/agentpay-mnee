{
  "name": "agentpay-mnee",
  "version": "1.0.0",
  "description": "Policy-based autonomous payments using MNEE stablecoin",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/agent"
  ],
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:sepolia": "hardhat run scripts/deploy-testnet.js --network sepolia",
    "verify:sepolia": "hardhat verify --network sepolia",
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web",
    "validate-env": "node scripts/validate-production-env.js",
    "validate-deployment": "node scripts/validate-production-env.js deployment",
    "validate-agent": "node scripts/validate-production-env.js agent",
    "validate-frontend": "node scripts/validate-production-env.js frontend",
    "security-audit": "node -e 'const SecurityAuditor = require(\"./lib/securityAuditor\"); new SecurityAuditor().runFullAudit()'"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "hardhat": "^2.19.0"
  },
  "dependencies": {
    "ethers": "^6.8.0",
    "dotenv": "^16.3.1"
  }
}