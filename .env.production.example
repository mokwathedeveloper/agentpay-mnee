# =============================================================================
# AgentPay Production Environment Configuration
# =============================================================================
# SECURITY: Never commit this file with real values
# Copy to .env and configure with your production values
# =============================================================================

# -----------------------------------------------------------------------------
# BLOCKCHAIN NETWORK CONFIGURATION
# -----------------------------------------------------------------------------
# Sepolia testnet RPC endpoint (required)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Mainnet RPC endpoint (for MNEE token interaction)
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# -----------------------------------------------------------------------------
# MNEE TOKEN CONFIGURATION
# -----------------------------------------------------------------------------
# MNEE stablecoin contract address (DO NOT CHANGE)
MNEE_TOKEN_ADDRESS=0x8ccedbAe4916b79da7F3F612EfB2EB93A2bFD6cF

# -----------------------------------------------------------------------------
# DEPLOYMENT CONFIGURATION
# -----------------------------------------------------------------------------
# Private key for contract deployment (must have Sepolia ETH)
DEPLOYER_PRIVATE_KEY=0x...

# Address that will own the deployed vault contract
VAULT_OWNER_ADDRESS=0x...

# -----------------------------------------------------------------------------
# AGENT CONFIGURATION
# -----------------------------------------------------------------------------
# Primary agent private key (separate from deployer)
AGENT_1_PRIVATE_KEY=0x...
AGENT_1_WALLET_ADDRESS=0x...
AGENT_1_NAME=Primary Payment Agent

# Secondary agent (optional)
AGENT_2_PRIVATE_KEY=0x...
AGENT_2_WALLET_ADDRESS=0x...
AGENT_2_NAME=Secondary Payment Agent

# Backup agent (optional)
AGENT_3_PRIVATE_KEY=0x...
AGENT_3_WALLET_ADDRESS=0x...
AGENT_3_NAME=Backup Payment Agent

# -----------------------------------------------------------------------------
# DEPLOYED CONTRACT ADDRESSES
# -----------------------------------------------------------------------------
# Set after successful deployment
VAULT_CONTRACT_ADDRESS=

# RPC URL for agent operations
RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Whitelisted payment recipient
RECIPIENT_WALLET_ADDRESS=0x...

# -----------------------------------------------------------------------------
# AGENT POLICY CONFIGURATION
# -----------------------------------------------------------------------------
# Comma-separated list of valid payment purposes
AGENT_VALID_PURPOSES=service_payment,api_usage,data_purchase,subscription,infrastructure

# Payment amount limits (in MNEE)
AGENT_MIN_AMOUNT=0.1
AGENT_MAX_AMOUNT=1000

# Delay between agent requests (milliseconds)
AGENT_REQUEST_DELAY_MS=2000

# Test payment scenarios
AGENT_PAYMENT_AMOUNTS=5,15,25,50
AGENT_PAYMENT_PURPOSES=API service payment,Data processing subscription,Infrastructure usage fee,Emergency service payment

# -----------------------------------------------------------------------------
# FRONTEND CONFIGURATION
# -----------------------------------------------------------------------------
# WalletConnect project ID (optional)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=

# Alchemy API key for frontend
NEXT_PUBLIC_ALCHEMY_API_KEY=YOUR_ALCHEMY_KEY

# Frontend RPC URL
NEXT_PUBLIC_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Contract addresses for frontend
NEXT_PUBLIC_VAULT_CONTRACT_ADDRESS=
NEXT_PUBLIC_MNEE_TOKEN_ADDRESS=0x8ccedbAe4916b79da7F3F612EfB2EB93A2bFD6cF

# Agent addresses for frontend
NEXT_PUBLIC_AGENT_1_ADDRESS=0x...
NEXT_PUBLIC_AGENT_2_ADDRESS=0x...
NEXT_PUBLIC_AGENT_3_ADDRESS=0x...

# -----------------------------------------------------------------------------
# OPERATIONAL CONFIGURATION
# -----------------------------------------------------------------------------
# Environment mode
NODE_ENV=production

# Debug logging (set to false in production)
DEBUG_AGENT=false

# Simulation mode (set to false for real transactions)
SIMULATION_MODE=false